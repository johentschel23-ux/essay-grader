{
  "name": "essay-grader",
  "description": "A PDF viewer and essay grader built with React and Electron.",
  "author": "Jonas Hentschel",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonashentschel/essaygrader.git"
  },
  "bugs": {
    "url": "https://github.com/jonashentschel/essaygrader/issues"
  },
  "keywords": [
    "electron",
    "pdf",
    "grading",
    "react",
    "essay",
    "education"
  ],
  "license": "MIT",
  "build": {
    "appId": "com.yourdomain.pdfviewer",
    "productName": "Essay Grader",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "error.html",
      "node_modules/pdfjs-dist/build/pdf.worker.min.js"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "asarUnpack": [
      "node_modules/better-sqlite3/**",
      "build/pdf.worker.min.js",
      "build/pdf.worker.min.mjs"
    ],
    "copyright": "Copyright Â© 2025 Jonas Hentschel",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Essay Grader",
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "@google/genai": "^0.14.0",
    "@tabler/icons-react": "^3.31.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "better-sqlite3": "^11.10.0",
    "pdfjs-dist": "^2.16.105",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-pdf": "^9.2.1",
    "react-pdf-highlighter": "^8.0.0-rc.0",
    "react-scripts": "5.0.1",
    "untitledui-js": "^2.2.232",
    "web-vitals": "^2.1.4"
  },
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "react-scripts build && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^7.0.1"
  }
}
